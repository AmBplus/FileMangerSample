@page
@model CD4Model
@{
}

<form method="post">
    <div class="row">
        <div class="col-12 p-3 col-md-8 p-md-5 bg-light border border-2 rounded-3 shadow-lg">
            <legend>
                Create Directory
            </legend>
            <hr/>
            <div class="mb-3">
                <label asp-for="viewModel.DirectoryName" class="form-label">Directory Name</label>
                <input type="text" asp-for="viewModel.DirectoryName"  class="form-control" aria-label="directory"/>
                <span asp-validation-for="@Model.viewModel.DirectoryName" class="text-danger"></span>
            </div>
            <button  type="submit" class="btn btn-primary">Create</button>
            <button  type="reset" class="btn btn-secondary">Reset</button>
        </div>
    </div>
</form>
@section Scripts
{
    <partial name="Shared/_ValidationScriptsPartial"/>
}
